<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C688B"
    android:layout_alignParentTop="true"
    android:elevation="15dp"
    android:id="@+id/revTop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#143054"
        android:layout_alignParentBottom="true"
        android:id="@+id/revMid">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#051B38"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:id="@+id/revBottom">
    </RelativeLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/revMid"
        android:layout_alignTop="@+id/txtFirstBig"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/tableRow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Road°C"
            android:id="@+id/txtTempRoad"
            android:paddingRight="5dp"
            android:textSize="30sp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="WindFrc"
            android:id="@+id/txtWindFrc"
            android:textSize="30sp"
            android:layout_gravity="center_vertical" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/stationName"
        android:id="@+id/txtFirstBig"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:layout_marginTop="106dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtUpdatetime"
        android:layout_below="@+id/txtFirstBig"
        android:layout_centerHorizontal="true" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="55dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/revMid"
        android:layout_alignBottom="@+id/txtFirstBig"
        android:gravity="center"
        android:id="@+id/tblRowTop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Air°C"
        android:id="@+id/txtTempAir"
        android:textSize="30sp"
        android:layout_gravity="center_vertical"
        android:textColor="#EEE"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WindSpd"
        android:id="@+id/txtWindSpd"
        android:layout_gravity="center_vertical"
        android:textSize="30sp"
        android:layout_marginStart="26dp"
        android:textColor="#EEE"/>

    </TableRow>


</RelativeLayout>

